{% extends 'base.html.twig' %}

{% block body %}
<div class="theme-showcase" role="main">
  <div class="row">
    <div class="col-xs-12 entete-mobile" style="margin-bottom:30px; background-color:#000; font-size: 24px;">
      <h1>VIDEO-JEUX</h1>
      <p><strong>www.video-jeux.fr</strong> est un site de jeux vidéo ou plutôt un site proposant plusieurs <span style="font-style: italic;"><strong>expériences vidéo ludiques</span></strong>.</p>
      <br/>
      <p>Ce site n'est pas encore optimisé pour fonctionner sur les téléphones portables.<br/>
      Afin de profiter des différents jeux veuillez accéder au site avec un <strong>ordinateur</strong></p>
      </p>
    </div>
  </div>
{% for game in games %}
{% if game.visible and game.active %}
  <div class="row" style="margin-bottom:30px; border:5px solid black;">
    <div class="col-xs-9 padding-0">
      <img src="{{ asset('bundles/videogame/images/'~game.shortName~'_lien.png') }}" class="img-responsive" style="width:100%;" >
    </div>
    <div class="col-xs-3 padding-0" style="background-color:000;" >
      <div class="col-xs-12 description">
        {% autoescape %}
          <h4><strong>{{ game.name|raw }}</strong></h4>
        {% endautoescape %}
      </div>
      <div style="display:none;">
        <a href="{{ path('mobile_game', { idName : game.shortName }) }}">
          Jouer {{ game.name }}
        </a>
      </div>
    </div>
  </div>
 {% endif %}
{% endfor %}
</div>
<script src="/js/index.js"></script>
{% endblock %}


{% block stylesheetsplus %}
<link rel="stylesheet"  type="text/css" media="all" href="{{ asset('/css/index.css') }}" />
{% endblock %}
