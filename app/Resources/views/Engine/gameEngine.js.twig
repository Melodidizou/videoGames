function render() {

  var time = Date.now() * 0.0005;

  camera.position.x += ( mouseX - camera.position.x ) * 0.15;
  camera.position.y += ( - mouseY - camera.position.y ) * 0.15;

  camera.lookAt( scene.position );
  renderer.clear();
  composer.render();

}

