{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sequence</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sequence.id }}</td>
            </tr>
            <tr>
                <th>Videonumber</th>
                <td>{{ sequence.videoNumber }}</td>
            </tr>
            <tr>
                <th>Nextvideo</th>
                <td>{{ sequence.nextVideo }}</td>
            </tr>
            <tr>
                <th>Starttext</th>
                <td>{{ sequence.startText }}</td>
            </tr>
            <tr>
                <th>Endtext</th>
                <td>{{ sequence.endText }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_sequences_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_sequences_edit', { 'id': sequence.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
